@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Usuarios</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nuevo Usuario</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblUsuarios" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cedula</th>
                <th>Nombre Completo</th>
                <th>Genero</th>
                <th>Correo</th>
                <th>Tipo Tarjeta</th>
                <th>Dinero Disponible</th>
                <th>Numero Tarjeta</th>
                <th>Contraseña</th>
                <th>IdPerfil</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/usuario.js"></script>
}