@{

	ViewData["Title"] = "Lista de Canciones";

}

<div class="container mt-4">
	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">Lista de Canciones</h2>
		</div>
		<div class="col-4 text-right">
			<a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nueva Canción</a>
		</div>
	</div>

	<br />
	<br />
	<table id="tblSongs" class="table table-striped table-bordered" style="width: 100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nombre Canción</th>
			</tr>
		</thead>
	</table>
</div>

@section Scripts {
	<script src="~/js/canciones.js"></script>

}

