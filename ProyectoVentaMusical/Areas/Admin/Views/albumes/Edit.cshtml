@model Models.Data.Albumes

@{
    ViewData["Title"] = "Editar Albumes";
}

<br />
<br />
<h3 class="text-center">Editar Albumes</h3>
<form method="POST" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="CodigoAlbum" />
    <div class="row px-2 border">
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Agrupa el formulario en una columna de 8 -->
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CodigoArtista"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CodigoArtista" type="number" min="1" step="1" class="form-control" placeholder="Debe digitar el Código de Artista" />
                    <span asp-validation-for="CodigoArtista" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NombreAlbum"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NombreAlbum" class="form-control" placeholder="Debe digitar el nombre del Album" />
                    <span asp-validation-for="NombreAlbum" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="AñoLanzamiento"></label>
                </div>
                <div class="col-8">
                    <input asp-for="AñoLanzamiento" class="form-control" placeholder="Debe digitar el año de lanzamiento" />
                    <span asp-validation-for="AñoLanzamiento" class="text-danger"></span>
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control">Editar Articulo</button>
                </div>
                &nbsp;
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Volver atras</a>
                </div>
            </div>
        </div>

        <!-- Muestra la imagen al lado del formulario -->
        <div class="col-4 pt-3">
            <img src="@Model.ImagenAlbum" width="300px" style="border-radius: 5px; border:1px solid #bbb9b9" />
        </div>
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.8.3/tinymce.min.js" integrity="sha512-VCEWnpOl7PIhbYMcb64pqGZYez41C2uws/M/mDdGPy+vtEJHd9BqbShE4/VNnnZdr7YCPOjd+CBmYca/7WWWCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}

